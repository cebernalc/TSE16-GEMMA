<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/general"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background_game"
    android:orientation="horizontal">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/fila0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:paddingTop="5dp">

        <Chronometer xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/chrono"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:textColor="#e00101"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/fila1"
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:layout_below="@+id/fila0"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:paddingTop="5dp">

        <ImageView
            android:id="@+id/imgnota"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:src="@drawable/score" />
    </RelativeLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/fila2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fila1"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:paddingTop="1dp">

        <Button
            android:id="@+id/re"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:width="65dp"
            android:height="65dp"
            android:background="@drawable/custom_button"
            android:tag="@string/re"
            android:text="@string/re"
            android:textColor="#2E3E02"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/si"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_toRightOf="@+id/re"
            android:width="65dp"
            android:height="65dp"
            android:background="@drawable/custom_button"
            android:tag="@string/si"
            android:text="@string/si"
            android:textColor="#2E3E02"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/mi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_toRightOf="@+id/si"
            android:width="65dp"
            android:height="65dp"
            android:background="@drawable/custom_button"
            android:tag="@string/mi"
            android:text="@string/mi"
            android:textColor="#2E3E02"
            android:textSize="20dp"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/fila3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fila2"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/sol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:width="65dp"
            android:height="65dp"
            android:background="@drawable/custom_button"
            android:tag="@string/sol"
            android:text="@string/sol"
            android:textColor="#2E3E02"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/don"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_toRightOf="@+id/sol"
            android:width="65dp"
            android:height="65dp"
            android:background="@drawable/custom_button"
            android:tag="@string/don_tag"
            android:text="@string/don"
            android:textColor="#2E3E02"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/fa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_toRightOf="@+id/don"
            android:width="65dp"
            android:height="65dp"
            android:background="@drawable/custom_button"
            android:tag="@string/fa"
            android:text="@string/fa"
            android:textColor="#2E3E02"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/la"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_toRightOf="@+id/fa"
            android:width="65dp"
            android:height="65dp"
            android:background="@drawable/custom_button"
            android:tag="@string/la"
            android:text="@string/la"
            android:textColor="#2E3E02"
            android:textSize="20dp"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/endgame"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:background="@drawable/custom_button"
            android:text="@string/endgame"
            android:textColor="#2E3E02"
            android:textSize="20dp"
            android:textStyle="bold" />
    </RelativeLayout>

</RelativeLayout>
