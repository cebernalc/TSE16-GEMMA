<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:ns1="http://schemas.android.com/tools">
    <bool name="enable_widget_provider">true</bool>
    <dimen name="task_list_right_margin">10dp</dimen>
    <style name="AppTheme" parent="android:Theme.Holo">
    </style>
    <style name="TextAppearance.EditTask_Spinner" parent="android:style/Widget.Holo.Spinner">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#FF333333</item>
        <item name="android:layout_marginRight">12dp</item>
        <item name="android:layout_marginLeft">12dp</item>
    </style>
    <style name="btn_remove">
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:src">@drawable/content_remove_light</item>
    </style>
    <style name="dark_edit_text" parent="dark_text">
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginLeft">0dp</item>
    </style>
    <style name="detail_label_line">
        <item name="android:background">@android:color/black</item>
    </style>
    <style name="field_editor_text_value" parent="dark_edit_text"> <!-- Common style for all text edit fields in widgets -->
    </style>
    <style name="field_view_text_value" parent="dark_text">
        <item name="android:layout_marginTop">2dip</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
        <item name="android:textIsSelectable">true</item>
    </style>
    <style name="task_group_text">
        <!--<item name="android:textColor" tools:targetApi="14">@color/holo_blue_dark</item>-->
        <item name="android:textColor" ns1:targetApi="14">#C5C6BB</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>
    <style name="task_list_item_text" parent="android:attr/textAppearanceMedium">
        <item name="android:textColor" ns1:targetApi="14">@style/dark_text</item>
    </style>
    <style name="task_list_progress_background">
        <item name="android:visibility">visible</item>
        <item name="android:background">@drawable/task_progress_background_shade</item>
    </style>
    <style name="task_list_widget_list">
        <item name="android:background">@drawable/widget_list_item_bg</item>
    </style>
    <style name="task_progressbar" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:layout_marginLeft">0dp</item>
    </style>
    <style name="task_seekbar" parent="android:Widget.SeekBar">
        <item name="android:layout_marginLeft">0dp</item>
    </style>
    <style name="task_widget" parent="task_widget_parent">
        <item name="android:padding">12dp</item>
    </style>
    <style name="tasks_expandable_list_item">
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>
    <style name="time_forward_button" parent="@style/detail_label_text">
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>
</resources>